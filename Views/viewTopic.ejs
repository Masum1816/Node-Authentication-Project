<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Topics</title>
    <link href="Style/main.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <h1 class="input w-100 mt-3 text-center form-container-viewTopic">Topics</h1>
    <div class="container">
        <div class="row">
            <% if (topics.length === 0) { %>
                <div class="col-12">
                    <p>No topics available.</p>
                </div>
            <% } else { %>
                <% topics.forEach(topic => { %>
                    <div class="col-4 d-flex flex-column align-items-start mb-4">
                        <section class="form-container-viewTopic w-100 mt-5">
                            <h4 class="form-btn w-100 mt-3">Topic: <%= topic.topic %></h4>
                            <ul>
                                <% topic.subTopics.forEach(subTopic => { %>
                                    <li class="input w-100 mt-3">SubTopic: <%= subTopic.subTopic %></li>
                                <% }) %>
                            </ul>
                        </section>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="/addSubTopic" class="form-btn w-100 mt-3">Add SubTopic</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
