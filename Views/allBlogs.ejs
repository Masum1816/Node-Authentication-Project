<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Blog</title>
    <link href="Style/main.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <h1 class="font-header text-center mt-3 mb-2">All Blogs</h1><hr>

    <div class="container">
        <div class="row d-flex flex-wrap">
            <% blogs.forEach(blog => { %>
                <div class="col-4">
                    <div class="form-container-all-blog mb-5">
                        <div class="card-body">
                            <% if (blog.image) { %>
                                <img src="/<%= blog.image %>" alt="Blog Image" class="blog-image">
                            <% } %>
                            <h2 class="font-title mt-4">Title : <%= blog.title %></h2>
                            <p class="font-content">Content : <%= blog.content %></p>
                            <form action="/addComment/<%= blog._id %>" method="post">
                                <input type="text" class="form-btn-comment mt-2" name="comment" placeholder="Comment...">
                                <button class="form-btn-add" type="submit">Add</button>
                            </form>
                        </div>
                    </div>
                    <div class="form-container-comment">
                        <p>Comments</p><hr>
                        <% if (Array.isArray(blog.comments) && blog.comments.length) { %>
                            <% blog.comments.forEach(comment => { %>
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <p class="mb-0"><%= comment.comment %></p>
                                    <p class="mb-0">- <%= comment.user ? comment.user.name : 'Anonymous' %></p>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p>No comments yet.</p>
                        <% } %>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
